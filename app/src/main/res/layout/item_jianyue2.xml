<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <TextView
        android:id="@+id/tv_jianyue_content_pic"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="13dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6dp"
        android:lines="3"
        android:text="简阅内容"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_jianyue_content_pic"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_jianyue_item1"
            android:layout_width="90dp"
            android:layout_height="90dp"
           />

        <ImageView
            android:id="@+id/iv_jianyue_item2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
           />





        <ImageView
            android:id="@+id/iv_jianyue_item3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:src="@drawable/jianyue_item2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_mouluezhi"
        android:layout_width="54dp"
        android:layout_height="18dp"
        android:layout_below="@id/ll_pic"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/jianyue_mou" />

    <TextView
        android:id="@+id/tv_jianyue_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_pic"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:text="胡先生"
        android:textColor="#f93e6a"
        android:textSize="9sp" />

    <ImageView
        android:id="@+id/iv_xunzhang1"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:layout_alignBottom="@id/iv_mouluezhi"
        android:layout_marginLeft="76dp"
        android:src="@drawable/xunzhang1_white" />

    <ImageView
        android:id="@+id/iv_xunzhang2"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:layout_alignBottom="@id/iv_mouluezhi"
        android:layout_toRightOf="@id/iv_xunzhang1"
        android:src="@drawable/xunzhang2_white" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_mouluezhi"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_xunzhang2"

        android:progress="50" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@id/iv_mouluezhi"
        android:layout_toRightOf="@id/iv_xunzhang2"
        android:src="@drawable/recommend" />


    <ImageView
        android:id="@+id/iv_jianyue_like"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/iv_mouluezhi"
        android:layout_marginLeft="200dp"

        android:src="@drawable/like1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_jianyue_like"
        android:layout_toRightOf="@id/iv_jianyue_like"
        android:text="110"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_jianyue_send"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/iv_mouluezhi"
        android:layout_marginLeft="252dp"
        android:src="@drawable/send1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_jianyue_send"
        android:layout_toRightOf="@id/iv_jianyue_send"
        android:text="110"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/iv_jianyue_comment"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/iv_mouluezhi"
        android:layout_marginLeft="300dp"
        android:src="@drawable/comment1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_jianyue_comment"
        android:layout_toRightOf="@id/iv_jianyue_comment"
        android:text="110"
        android:textSize="10sp" />


</RelativeLayout>
