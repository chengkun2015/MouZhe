<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="自传播的关键"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="72dp"
                android:layout_height="77dp"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/touxiang1" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="16dp"
                android:layout_alignRight="@id/iv_pic"
                android:layout_below="@id/iv_pic"
                android:src="@drawable/bg_xunzhang" />

            <ImageView
                android:id="@+id/iv_mouluezhi"
                android:layout_width="43dp"
                android:layout_height="16dp"
                android:layout_alignLeft="@id/iv_pic"
                android:layout_below="@id/iv_pic"
                android:src="@drawable/bg_mouluezhi" />

            <TextView
                android:id="@+id/tv_mouluezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_pic"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="1dp"
                android:text="112.9"
                android:textColor="#ff0000"
                android:textSize="10sp" />


            <ImageView
                android:id="@+id/iv_xunzhang1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/iv_pic"
                android:layout_toRightOf="@id/iv_mouluezhi"
                android:src="@drawable/xunzhang1" />

            <ImageView
                android:id="@+id/iv_xunzhang2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/iv_pic"
                android:layout_toRightOf="@id/iv_xunzhang1"
                android:src="@drawable/xunzhang2" />

            <TextView

                android:id="@+id/tv_articleAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_pic"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="105dp"
                android:text="柳传志"
                android:textColor="#565151"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_authorPosition"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_articleAuthor"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="152dp"

                android:text="联想总部CEO"
                android:textColor="#8d8989"
                android:textSize="11sp" />


            <TextView

                android:id="@+id/tv_recommder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_articleAuthor"
                android:layout_marginTop="71dp"
                android:text="徐小平"
                android:textColor="#ff0000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_recommenderPosition"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_recommder"
                android:layout_alignLeft="@id/tv_authorPosition"

                android:ellipsize="middle"
                android:singleLine="true"
                android:text="杰智慧公司CEO杰智慧公司CEO"
                android:textColor="#fb8ba5"
                android:textSize="10sp" />


            <ListView
                android:id="@+id/lv_reward"
                android:layout_width="118dp"
                android:layout_height="42dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/border"
                android:divider="#00000000"
                android:dividerHeight="0dp"
                android:scrollbars="none" />


            <cn.modificator.waterwave_progress.WaterWaveProgress
                android:id="@+id/waterWaveProgress"
                android:layout_width="84dp"
                android:layout_height="84dp"

                android:layout_alignRight="@id/tv_title"
                android:layout_alignTop="@id/tv_articleAuthor"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:maxProgress="100"
                app:progress="45" />

            <TextView
                android:id="@+id/tv_moneyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/waterWaveProgress"
                android:layout_marginRight="18dp"
                android:layout_marginTop="80dp"
                android:text="￥3000"
                android:textColor="#f80b0b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_article_content"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_mouluezhi"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="6dp"
                android:lines="5"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_seeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_article_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:text="查看全文"
                android:textColor="#5370c3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_seeAll"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_seeAll"
                android:text="(15k)"
                android:textColor="#3b51c3"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="51dp"
                android:layout_height="22dp"
                android:layout_below="@id/tv_seeAll"
                android:layout_marginLeft="169dp"
                android:background="@drawable/like">

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="赞"
                    android:textColor="#bbb9b9"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="51dp"
                android:layout_height="22dp"
                android:layout_below="@id/tv_seeAll"
                android:layout_marginLeft="229dp"
                android:background="@drawable/send"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:text="分享"
                    android:textColor="#bbb9b9"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="51dp"
                android:layout_height="22dp"
                android:layout_below="@id/tv_seeAll"
                android:layout_marginLeft="288dp"
                android:background="@drawable/comment">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:text="评论"
                    android:textColor="#bbb9b9"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout

                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/waterWaveProgress"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="350dp"
                android:background="#f9f9f9"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/like1" />

                    <TextView
                        android:id="@+id/tv_mouzhequan_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="咋qwq"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/send1" />

                    <TextView
                        android:id="@+id/tv_mouzhequan_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="qwqwq"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_mouzhequan_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三:"
                        android:textColor="#8c9dd8"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_mouzhequan_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="我是评论人我是评论人我是评论人我是评论人我是评论人"
                        android:textSize="11sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_showAllComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="查看全部80条评论"
                    android:textColor="#8c9dd8"
                    android:textSize="11sp" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>


