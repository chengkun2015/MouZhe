<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FAFAFA">

        <ImageView
            android:id="@+id/iv_info_back"
            android:layout_width="9dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/left_arrow" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑资料"
            android:textColor="#404040"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_tabInfo"
            android:layout_width="99dp"
            android:layout_height="73dp"
            android:src="@drawable/personinfo" />


        <ImageView
            android:id="@+id/iv_tabWork"
            android:layout_width="81dp"
            android:layout_height="73dp"
            android:src="@drawable/job" />


        <ImageView
            android:id="@+id/iv_tabExp"
            android:layout_width="81dp"
            android:layout_height="73dp"
            android:src="@drawable/experence" />


        <ImageView
            android:id="@+id/iv_tabHobby"
            android:layout_width="101dp"
            android:layout_height="73dp"
            android:src="@drawable/hobby" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>