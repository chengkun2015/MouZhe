<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <ImageView
            android:id="@+id/iv_contacts"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/tongxunlu" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/iv_contacts"
            android:src="@drawable/shousuo" />

        <ImageView
            android:id="@+id/iv_dooubleclick"
            android:layout_width="185dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/iv_search"
            android:src="@drawable/shuangjihuidingbu" />


        <ImageView
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"

            android:src="@drawable/fabiaowenzhang" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_content"
        android:name="com.jzhihui.mouzhe2.Fragment.ContentFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_main_icon1"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon1_selector" />

        <ImageButton
            android:id="@+id/ib_main_icon2"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"

            android:background="@drawable/icon2_selector" />

        <ImageButton
            android:id="@+id/ib_main_icon3"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"

            android:background="@drawable/icon3_selector" />

        <ImageButton
            android:id="@+id/ib_main_icon4"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon4_selector" />

    </LinearLayout>


</LinearLayout>
